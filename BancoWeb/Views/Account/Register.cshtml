@model BancoWeb.ViewModel.RegisterModel

<!DOCTYPE html>
<html>
<head>
    @{
        ViewBag.Title = "Register";
    }

    <style>
        body, input {
            margin: auto;
            background-color: #585757;
            font-family: sans-serif;
            text-align: center;
            font-size: 30px;
            color: #fff;
        }

        fieldset {
            margin: 1em auto;
        }

        h1 {
            font-size: 3em;
        }
    </style>
</head>

<body>
    <h2>Registrarse</h2>
    <div>
        @using (Html.BeginForm("RegisterRequest", "Account"))
        {
            <div style="color:red;">@Html.ValidationSummary()</div>
            <div class="row">
                <!--Show details are saved successfully message-->
                <div class="col-lg-12">@ViewBag.Message</div>
            </div><br />
            <div class="row">
                <div class="col-lg-2">@Html.LabelFor(a => a.Nombre)</div>
                <div class="col-lg-10">@Html.TextBoxFor(a => a.Nombre, new { @class = "form-control" })</div>
            </div><br />
            <div class="row">
                <div class="col-lg-2">@Html.LabelFor(a => a.Ape_P)</div>
                <div class="col-lg-10">@Html.TextBoxFor(a => a.Ape_P, new { @class = "form-control" })</div>
            </div><br />
            <div class="row">
                <div class="col-lg-2">@Html.LabelFor(a => a.Ape_M)</div>
                <div class="col-lg-10">@Html.TextBoxFor(a => a.Ape_M, new { @class = "form-control" })</div>
            </div><br />
            <div class="row">
                <div class="col-lg-2">@Html.LabelFor(a => a.Curp)</div>
                <div class="col-lg-10">@Html.TextBoxFor(a => a.Curp, new { @class = "form-control" })</div>
            </div><br />
            <div class="row">
                <div class="col-lg-2">@Html.LabelFor(a => a.Fecha_Nacimiento)</div>
                <div class="col-lg-10">@Html.TextBoxFor(a => a.Fecha_Nacimiento, new { @class = "form-control", type = "date" })</div>
            </div><br />
            <input type="submit" value="Register" class="btn btn-primary" />
        }

    </div>
</body>
</html>