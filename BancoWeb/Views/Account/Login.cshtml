
@model BancoWeb.Models.usuario

<!DOCTYPE html>
<html>
<head>
    @{
        ViewBag.Title = "Login";
    }


    <style>
        body, input {
            margin: auto;
            background-color: #585757;
            font-family: sans-serif;
            text-align: center;
            font-size: 30px;
            color: #fff;
        }

        fieldset {
            margin: 1em auto;
        }

        h1 {
            font-size: 3em;
        }
    </style>
</head>

<body>
    <h2>Login</h2>

    <div>
        @using (Html.BeginForm("Login", "Account"))
        {
            <div style="color:red;">@Html.ValidationSummary()</div>
            <div class="row">
                <!--Show details are saved successfully message-->
                <div class="col-lg-12">@ViewBag.Message</div>
            </div><br />

            <div class="row">
                <div class="col-lg-2">@Html.LabelFor(a => a.UserName)</div>
                <div class="col-lg-10">@Html.TextBoxFor(a => a.UserName, new { @class = "form-control" })</div>
            </div><br />
            <div class="row">
                <div class="col-lg-2">@Html.LabelFor(a => a.Password)</div>
                <div class="col-lg-10">@Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password" })</div>
            </div><br />
            <input type="submit" value="Login" class="btn btn-primary" />
        }
    </div>
</body>
</html>
